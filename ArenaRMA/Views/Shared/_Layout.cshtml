<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ArenaRMA</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background: #f3f6ff;
        }

        /* BAL OLDALI MEN칖 */
        .sidebar {
            width: 240px;
            height: 100vh;
            background: #3380C5;
            color: white;
            position: fixed;
            left: 0;
            top: 0;
            padding-top: 25px;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 30px;
                color: white;
                letter-spacing: 1px;
            }

            .sidebar a {
                display: block;
                padding: 12px 25px;
                color: #dbeafe;
                text-decoration: none;
                font-size: 17px;
            }

                .sidebar a:hover {
                    background: #173eaf;
                    color: white;
                }

        /* F콇 TARTALOM */
        .main {
            margin-left: 240px;
            padding: 25px;
        }

        .dashboard-title {
            font-size: 28px;
            font-weight: bold;
            margin-bottom: 25px;
            color: #1e3a8a;
        }

        /* K츼RTY츼K */
        .card-container {
            display: flex;
            gap: 20px;
            flex-wrap: wrap;
        }

        .card {
            background: white;
            width: 260px;
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 0 12px rgba(0,0,0,0.1);
            transition: 0.2s;
            cursor: pointer;
        }

            .card:hover {
                transform: translateY(-3px);
                box-shadow: 0 0 20px rgba(0,0,0,0.15);
            }

        .card-title {
            font-size: 20px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #1d4ed8;
        }

        .card-desc {
            color: #555;
            font-size: 15px;
        }

        .menu-item {
            display: block;
            padding: 12px 25px;
            color: #dbeafe;
            text-decoration: none;
            font-size: 17px;
            transition: 0.2s;
        }

            .menu-item:hover {
                background: #173eaf;
                color: white;
                padding-left: 32px;
            }

            .menu-item.active {
                background: #0f2e8a;
                padding-left: 32px;
                color: white;
                font-weight: bold;
            }
    </style>
</head>
<body>

    <!-- OLDALS츼V -->
    <!-- OLDALS츼V -->
    <div class="sidebar">

        <h2>ArenaRMA</h2>

        <!-- SUPERADMIN MEN칖 -->
        @if (Context.Session.GetString("Role") == "SuperAdmin")
        {
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Dashboard") ? "active" : "")" href="/Dashboard/Index">游 Statisztik치k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Warranty") ? "active" : "")" href="/Warranty/Index">游닇 Garanci치k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/UserAdmin") ? "active" : "")" href="/UserAdmin/Index">游녻 Felhaszn치l칩k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/DropdownAdmin") ? "active" : "")" href="/Customer/Index">游늶 C칤mlist치k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Emails") ? "active" : "")" href="/Emails/Index">游닏 E-mail beolvas치s</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Customer") ? "active" : "")" href="/Customer/Import">游닏 Customer beolvas치s</a>

        }

        <!-- ADMIN MEN칖 -->
        @if (Context.Session.GetString("Role") == "Admin")
        {
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Dashboard/Index") ? "active" : "")" href="/Dashboard/Index">游 Statisztik치k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Warranty/Index") ? "active" : "")" href="/Warranty/Index">游닇 Garanci치k</a>
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/UserAdmin/Index") ? "active" : "")" href="/UserAdmin/Index">游녻 Felhaszn치l칩k</a>
        }

        <!-- USER MEN칖 -->
        @if (Context.Session.GetString("Role") == "User")
        {
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Warranty/Index") ? "active" : "")" href="/Warranty/Index">游닇 Garanci치k</a>
        }

        <!-- GUEST MEN칖 -->
        @if (Context.Session.GetString("Role") == "Guest")
        {
            <a class="menu-item @(Context.Request.Path.StartsWithSegments("/Warranty/Index") ? "active" : "")" href="/Warranty/Index">游닇 Garanci치k</a>
        }


        <hr style="border-color: rgba(255,255,255,0.3); margin: 20px 0;" />

        <a href="/Auth/Logout">拘勇 Kijelentkez칠s</a>

    </div>


    <!-- TARTALOM -->
    <div class="main">
        @RenderBody()
    </div>

</body>
</html>
