<!DOCTYPE html>
<html lang="hu">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - ArenaRMA</title>

    <style>
        body {
            margin: 0;
            padding: 0;
            background: #f0f4ff; /* halvány kékes háttér */
            font-family: Arial, sans-serif;
        }

        .container-all {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        /* BAL KÉP PANEL */
        .left-panel {
            width: 45%;
            height: 100vh;
            background-image: url('/images/arena_rma_bg.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* LOGO FELIRAT */
        .logo-text {
            font-size: 52px;
            font-weight: 900;
            color: white;
            text-shadow: 0 0 12px rgba(0,0,0,0.55);
            letter-spacing: 2px;
        }

        /* JOBB OLDALI LOGIN PANEL */
        .right-panel {
            width: 55%;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            width: 380px;
            padding: 35px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 0 18px rgba(0,0,0,0.15);
        }

            .login-box h2 {
                text-align: center;
                color: #1d4ed8;
                margin-bottom: 25px;
                font-size: 26px;
            }

            .login-box input {
                width: 100%;
                padding: 12px;
                margin-bottom: 18px;
                border-radius: 6px;
                border: 1px solid #cbd5e1;
                font-size: 16px;
            }

        .login-btn {
            width: 100%;
            padding: 12px;
            background: #1d4ed8;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 18px;
            cursor: pointer;
            margin-top: 5px;
        }

            .login-btn:hover {
                background: #173eaf;
            }

        .error {
            color: red;
            text-align: center;
            margin-bottom: 15px;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <div class="container-all">

        <!-- BAL KÉPES PANEL -->
        <div class="left-panel">
            <div class="logo-text"></div>
        </div>

        <!-- JOBB LOGIN PANEL -->
        <div class="right-panel">
            @RenderBody()
        </div>

    </div>

</body>
</html>
