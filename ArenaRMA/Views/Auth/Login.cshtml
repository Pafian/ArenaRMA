@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Bejelentkezés";
}

<div class="login-container">
    <h1>BEJELENTKEZÉS</h1>

    @if (ViewBag.Error != null)
    {
        <div class="error">@ViewBag.Error</div>
    }
    <form method="post">
        <div class="input-group">
            <input type="text" id="username" name="username" placeholder="Felhasználó" required>
        </div>

        <div class="input-group">
            <input type="password" id="password" name="password" placeholder="••••••••" required>
        </div>

        <button type="submit">Belépés</button>
    </form>

    <div class="footer">
        Nem tudsz bejelentkezni? <a href="https://www.youtube.com/watch?v=On05yEFt41M">HELP!</a>
    </div>
</div>
