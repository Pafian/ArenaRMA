<h2>SuperAdmin belépés</h2>

@if (ViewBag.Error != null)
{
    <p style="color:red">@ViewBag.Error</p>
}

<form method="post">
    <div>
        <label>Felhasználónév</label><br />
        <input name="username" />
    </div>

    <div>
        <label>Jelszó</label><br />
        <input type="password" name="password" />
    </div>

    <br />
    <button type="submit">Belépés</button>
</form>
